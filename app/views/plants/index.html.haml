%h1 Listing plants

%table
  %thead
    %tr
      %th Name
      %th Code
      %th Description
      %th
      %th
      %th

  %tbody
    - @plants.each do |plant|
      %tr
        %td= plant.name
        %td= plant.code
        %td= plant.description
        %td= link_to 'Show', plant
        %td= link_to 'Edit', edit_plant_path(plant)
        %td= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' }

%br

